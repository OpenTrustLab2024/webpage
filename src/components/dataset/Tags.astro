---
import '../../styles/tags.css';
export interface Props {
  tags: object;
}
const { tags } = Astro.props;
---

<div class="tagsContainer">
  <div>
    <span>
      {tags.data.map((item: string) => <a class="bg-lime-300 dark:bg-lime-600 duration-300">{item}</a>)}
    </span>
    <span>
      {tags.format.map((item: string) => <a class="bg-cyan-200 dark:bg-cyan-600 duration-300">{item}</a>)}
    </span>
    <span>
      {tags.task.map((item: string) => <a class="bg-amber-300 dark:bg-amber-600 duration-300">{item}</a>)}
    </span>
    <span>
      {
        tags.license.length >= 1 &&
          tags.license.map((item: string) => <a class="bg-gray-200 dark:bg-gray-400  duration-300">{item}</a>)
      }
    </span>
  </div>
</div>
