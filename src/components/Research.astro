---
const { imageSrc, title, authors, publication } = Astro.props;
---

<style>
  .paper-card {
    border: 1px solid #d1d5db;
    border-radius: 8px;
    display: flex;
    align-items: center;
    padding: 16px;
    max-width: 800px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .paper-image {
    max-width: 200px;
    margin-right: 16px;
  }

  .paper-details {
    flex-grow: 1;
  }

  .paper-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin: 0;
  }

  .paper-authors, .paper-publication {
    font-size: 1rem;
    color: #6b7280;
    margin: 4px 0;
  }
</style>

<div class="paper-card">
  <img src={imageSrc} alt="Paper Image" class="paper-image" />
  <div class="paper-details">
    <h2 class="paper-title">{title}</h2>
    <p class="paper-authors">{authors}</p>
    <p class="paper-publication">{publication}</p>
  </div>
</div>
